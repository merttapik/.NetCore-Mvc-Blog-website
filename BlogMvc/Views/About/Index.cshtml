@using EntityLayer.Concrete
@model List<About> 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}






<!--/banner-->
<div class="banner-inner">
</div>
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="index.html">Home</a>
    </li>
    <li class="breadcrumb-item active">About</li>
</ol>
<!--//banner-->
<!--/main-->
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">About</h3>
        <div class="row inner-sec">
            <!--left-->
            <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                <div class="blog-grid-top">
                    @foreach (var item in Model)
                    {


                    <div class="blog_info_left_grid">
                        <a href="/Blog/Index">
                            <img src="@item.AboutImage1" class="img-fluid" alt="">
                        </a>
                    </div>
                    <h3>
                        @item.AboutDetails
                    </h3>
                    <p>
                        @item.AboutDtails2
                    </p>
                     }
                </div>
                  
            </div>
            <!--//left-->
            <!--right-->
            <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                <div class="right-blog-info text-left">
                    @await Html.PartialAsync("~/Views/NewsLetter/SubscribeMail.cshtml")
                    <div class="tech-btm widget_social">
                        @await Html.PartialAsync("~/Views/About/SocialMedia.cshtml")
                    </div>

                    @await Component.InvokeAsync("WriterLastBlog")
                </div>

            </aside>
            <!--//right-->
        </div>
    </div>
</section>


