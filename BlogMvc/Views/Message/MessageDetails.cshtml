@model EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Message</h1>

<br />

@Html.Label("Message Id")
@Html.TextBoxFor(x => x.MessageId, new { @class = "form-control" })
<br />

@Html.Label("Message Subject")
@Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
<br />
@Html.Label("Message Date")
@Html.TextBoxFor(x => x.MessageDate, new { @class = "form-control" })
<br />
@Html.Label("Message  Content")
@Html.TextAreaFor(x => x.MessageDetails, 15, 3, new { @class = "form-control" })
<br />
