@using EntityLayer.Concrete
@model List<Blog>
 
<div class="tech-btm">
    <h4>Last Blogs of Author</h4>
  

    @for (int i = 1; i <4; i++)
    {

  
    <div class="blog-grids row mb-3">
        <div class="col-md-5 blog-grid-left">
            <a href="single.html">
                <img src="@Model[Model.Count-i].BlogImage" class="img-fluid" alt="">
            </a>
        </div>
        <div class="col-md-7 blog-grid-right">

            <h5>
                <a href="single.html">@Model[Model.Count-i].BlogTitle </a>
            </h5>
            <div class="sub-meta">
                <span>
                    <i class="far fa-clock"></i> @(((DateTime) Model[Model.Count-i].BlogCreateDate).ToString("dd-MMM-yy"))
                </span>
            </div>
        </div>

    </div>
    }
</div>