
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Blogger | Admin</title> 

    <link href="/CoreBlogTema/admin/css/bootstrap.min.css" rel="stylesheet">
    <link href="/CoreBlogTema/admin/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="/CoreBlogTema/admin/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="/CoreBlogTema/admin/css/animate.css" rel="stylesheet">
    <link href="/CoreBlogTema/admin/css/style.css" rel="stylesheet">

</head>

<body>

    <div id="wrapper">

        @await Html.PartialAsync("~/Views/Admin/AdminNavbarPartial.cshtml") 

        <div id="page-wrapper" class="gray-bg">
            <div class="row border-bottom">
                <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
                    <div class="navbar-header">
                        <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
                        
                    </div>
                    <ul class="nav navbar-top-links navbar-right">
                        <li>
                            <span class="m-r-sm text-muted welcome-message">Welcome to Blogger Admin .</span>
                        </li>
                        @await Component.InvokeAsync("Message")
                      


                        <li>
                            <a href="/Login/Logout">
                                <i class="fa fa-sign-out"></i> Log out
                            </a>
                        </li>
                    </ul>

                </nav>
            </div>
          
            <div class="wrapper wrapper-content animated fadeInRight">
                @RenderBody()
            </div>
            <div class="footer">
            
                <div>
                    <strong>Copyright Blogger</strong> 
                </div>
            </div>

        </div>
    </div>



    <!-- Mainly scripts -->
    <script src="/CoreBlogTema/admin/js/jquery-3.1.1.min.js"></script>
    <script src="/CoreBlogTema/admin/js/popper.min.js"></script>
    <script src="/CoreBlogTema/admin/js/bootstrap.js"></script>
    <script src="/CoreBlogTema/admin/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="/CoreBlogTema/admin/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

    <!-- Peity -->
    <script src="/CoreBlogTema/admin/js/plugins/peity/jquery.peity.min.js"></script>

    <!-- Custom and plugin javascript -->
    <script src="/CoreBlogTema/admin/js/inspinia.js"></script>
    <script src="/CoreBlogTema/admin/js/plugins/pace/pace.min.js"></script>

    <!-- iCheck -->
    <script src="/CoreBlogTema/admin/js/plugins/iCheck/icheck.min.js"></script>

    <!-- Peity -->
    <script src="/CoreBlogTema/admin/js/demo/peity-demo.js"></script>

    <script>$(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });</script>

</body>

</html>

