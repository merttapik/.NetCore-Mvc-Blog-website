
<div class="tech-btm">
    <img src="~/CoreBlogTema/web/images/banner1.jpg" class="img-fluid" alt="">
</div>
<div class="tech-btm">
    <h4>Sign up to our newsletter</h4>
    <p>Get notification about our blogs</p>
    <form method="post" asp-action="SubscribeMail" asp-controller="NewsLetter">
        <input type="email" id="txtmail" placeholder="Email" required="" name="Mail">
        <input type="submit" id="btn" value="Subscribe">
    </form>

</div>
<script type="text/javascript">
    $("#btn").click(function () {
        let value = {
            Mail: $("#txtmail").val()
        };
        $.ajax({
            type: "post",
            url: "/NewsLetter/SubscribeMail/",
            data: value,
            success: function (func) {
                let result = jQuery.parseJSON(func);
            }

        })
    })
</script>
