@model UserSignUpViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Author Register</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @using (Html.BeginForm("Index", "RegisterUser", FormMethod.Post))
                {
                <div class="form-row">
                    <div class="col-md-12 mb-3">
                        <label for="validationCustom01">User Name</label>
                        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })

                        @*<input type="text" class="form-control" id="validationDefault01"placeholder="" required="" name="WriterName" />*@
                    </div>
                    <div class="col-md-12 mb-3">
                        <label for="validationCustom02">Full Name</label>
                        @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })

                    </div>
                    <div class="col-md-12 mb-3">
                        <label for="validationCustom02">Mail</label>
                        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })

                    </div>
                </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Password</label>
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control password", type = "password" })
                          
                        </div>

                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Confirm Password</label>
                            @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control" ,type = "password" })
                           
                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Register</button>
                    <p>
                        <a id="btn" href="#">By clicking Signup, I agree to your terms</a>
                    </p>
                }

            </div>
        </div>
    </div>
</section>

<script>
    $('#btn').click(function () {
        swal("We offer you a secure experiment.All your data is only using in the web site and your password and mail will be hashing ");
    });
</script>





















