@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "BlogEdit";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Edit Your Blog </h1>
<br />
@using (Html.BeginForm("BlogAdd", "Blog", FormMethod.Post))
{
    @Html.Label("Blog Id")
    @Html.TextBoxFor(x => x.BlogId, new { @class = "form-control" })
    <br />
    @Html.Label("Blog Image")
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
    <br />
    @Html.Label("Blog Title")
    @Html.TextBoxFor(x => x.BlogTitle, new { @class = "form-control" })
    <br />

    @Html.Label("Blog Category")
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)
        ViewBag.cv, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryId);
    <br />
    @Html.Label("Blog Content")
    @Html.TextAreaFor(x => x.BlogContent, 15, 3, new { @class = "form-control" })
    <br />
    <button type="submit" class="btn btn-gradient-primary mr-2">Save Changes</button>
}
