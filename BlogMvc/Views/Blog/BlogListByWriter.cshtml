@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Writer Blogs</h1>
<div>
    <table class="table table-bordered">
        <tr>
            <th> #</th>
            <th>Blog Title</th>
            <th>Created Date</th>
            <th>Category</th>
            <th>Status</th>
            <th>Delete</th>
            <th>Edit</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BlogId</td>
                <td>@item.BlogTitle</td>
                <td>@(((DateTime) item.BlogCreateDate).ToString("dd-MMM-yy"))</td>
                <td>@item.Category.CategoryName</td>
                <td>@item.BlogStatus</td>
                <td><a href="/Blog/BlogDelete/@item.BlogId" class="btn btn-danger">Delete</a></td>
                <td><a href="/Blog/BlogEdit/@item.BlogId" class="btn btn-warning">Edit</a></td>

            </tr>
        }

    </table>
    <a href="#" class="btn btn-primary">Create New Blog</a>
</div>

