
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<body>
    <div class="container-scroller">
        <!-- partial:partials/_navbar.html -->
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_sidebar.html -->

            <div class="content-wrapper">
                <div class="row" id="proBanner">

                </div>
                <div class="page-header">
                    <h3 class="page-title">
                        <span class="page-title-icon bg-gradient-primary text-white mr-2">
                            <i class="mdi mdi-home"></i>
                        </span> Dashboard
                    </h3>

                </div>
                <div class="row">
                    <div class="col-md-4 stretch-card grid-margin">
                        <div class="card bg-gradient-danger card-img-holder text-white">
                            <div class="card-body">

                                <h4 class="font-weight-normal mb-3">
                                    All Blogs <i class="mdi mdi-chart-line mdi-24px float-right"></i>
                                </h4>
                                <h2 class="mb-5">@ViewBag.v1</h2>

                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 stretch-card grid-margin">
                        <div class="card bg-gradient-info card-img-holder text-white">
                            <div class="card-body">

                                <h4 class="font-weight-normal mb-3">
                                    Your Blogs  <i class="mdi mdi-bookmark-outline mdi-24px float-right"></i>
                                </h4>
                                <h2 class="mb-5">@ViewBag.v2</h2>

                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 stretch-card grid-margin">
                        <div class="card bg-gradient-success card-img-holder text-white">
                            <div class="card-body">

                                <h4 class="font-weight-normal mb-3">
                                    Categories <i class="mdi mdi-diamond mdi-24px float-right"></i>
                                </h4>
                                <h2 class="mb-5">@ViewBag.v3</h2>

                            </div>
                        </div>
                    </div>
                </div>
                @await Component.InvokeAsync("BlogListDashboard")

                @await Component.InvokeAsync("WriterAboutOnDashboard")


            </div>
            <!-- content-wrapper ends -->
            <!-- partial -->
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->

    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="/CoreBlogTema/writer/writer/assets/vendors/chart.js/Chart.min.js"></script>
    <!-- End plugin js for this page -->

    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="/CoreBlogTema/writer/writer/assets/js/dashboard.js"></script>
    <script src="/CoreBlogTema/writer/writer/assets/js/todolist.js"></script>
    <!-- End custom js for this page -->
</body>
</html>

