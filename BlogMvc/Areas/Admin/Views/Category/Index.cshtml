@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Category Name</th>
        <th>Make Passive</th>
        <th>Make Active</th>
        <th>Edit</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryId</td>
            <td>@item.CategoryName</td>
            <td><a href="#" class="btn btn-danger">Make Passive</a></td>
            <td><a href="#" class="btn btn-primary">Make Active</a></td>
            <td><a href="#" class="btn btn-warning">Edit Category</a> </td>
        </tr>
    }
</table>
<br />
<a href="/Admin/Category/AddCategory/" class="btn btn-primary">Add New Category</a>
<br /><br />
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new  {page }))